<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050A30"
    android:orientation="vertical"
    tools:context=".InformationActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="45dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Tentang"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Logo1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SmoKa - IoT"
            android:fontFamily="@font/poppinsextra"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins"
            android:text="Sistem Monitoring Kualitas Air"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck" />
    </LinearLayout>
    <!-- CardView untuk Anggota -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAnggota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:background="@drawable/cardview_rounded_background"> <!-- Tambahkan atribut cardCornerRadius dengan nilai 16dp -->

        <!-- Isi Expandable Layout Anggota di sini -->
        <LinearLayout
            android:id="@+id/expandLayoutAnggota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Item Anggota -->
            <include layout="@layout/item_anggota" />

            <!-- Item Anggota Kedua -->
            <include layout="@layout/item_anggota" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView untuk Dosen Pembimbing -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewAnggota"
        android:padding="16dp"
        android:background="@drawable/cardview_rounded_background"><!-- Tambahkan atribut cardCornerRadius dengan nilai 16dp -->

        <!-- Isi Expandable Layout Dosen Pembimbing di sini -->
        <LinearLayout
            android:id="@+id/expandLayoutDosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <!-- Item Dosen Pembimbing -->
            <include layout="@layout/item_dosen" />
            <!-- Item Dosen Pembimbing Kedua -->
            <include layout="@layout/item_dosen" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tambahkan ExpandableListView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewExpandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewDosen"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp"
        android:elevation="4dp">
        <!-- Atur elevation sesuai kebutuhan Anda untuk memberikan efek bayangan -->

        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:groupIndicator="@null"
            android:dividerHeight="1dp"
            android:background="#262A46" />

    </androidx.cardview.widget.CardView>



</LinearLayout>

