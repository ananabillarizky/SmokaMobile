<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F5F8"
    tools:context=".JadwalActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="45dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/tv_tjudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_back"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppinsextra"
        android:text="Jadwal Pakan Ikan Otomatis"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tv_kettime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tjudul"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins"
        android:text="Pakan 1"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgjam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_kettime1"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/bgjadwal" />

    <TextView
        android:id="@+id/tvtime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_kettime1"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llBtnOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgjam1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/saveButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="80dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/buttonrounded"
            android:onClick="onSaveButtonClicked"
            android:text="Save"
            android:textColor="@color/white"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/buttonrounded"
            android:textColor="@color/white"
            android:onClick="onSaveButtonClicked"
            android:text="Edit"
            tools:ignore="DuplicateClickableBoundsCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_kettime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llBtnOne"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="Pakan 2"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imgjam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_kettime2"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/bgjadwal" />


    <TextView
        android:id="@+id/tvtime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_kettime2"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llBtnTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgjam2"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
            <Button
                android:id="@+id/saveButton2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginRight="80dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:background="@drawable/buttonrounded"
                android:onClick="onSaveButtonClicked"
                android:text="Save"
                tools:ignore="DuplicateClickableBoundsCheck" />

            <Button
                android:id="@+id/editButton2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/buttonrounded"
                android:textColor="@color/white"
                android:onClick="onSaveButtonClicked"
                android:text="Edit"
                tools:ignore="DuplicateClickableBoundsCheck" />
    </LinearLayout>



    <TextView
        android:id="@+id/tv_kettime3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llBtnTwo"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins"
        android:text="Pakan 3"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imgjam3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_kettime3"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/bgjadwal" />


    <TextView
        android:id="@+id/tvtime3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_kettime3"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llBtnThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgjam3"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
            <Button
                android:id="@+id/saveButton3"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:layout_marginRight="80dp"
                android:background="@drawable/buttonrounded"
                android:onClick="onSaveButtonClicked"
                android:text="Save"
                android:fontFamily="@font/poppins"
                tools:ignore="DuplicateClickableBoundsCheck" />

            <Button
                android:id="@+id/editButton3"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:background="@drawable/buttonrounded"
                android:onClick="onSaveButtonClicked"
                android:text="Edit"
                android:fontFamily="@font/poppins"
                tools:ignore="DuplicateClickableBoundsCheck" />

    </LinearLayout>

</RelativeLayout>