<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#F0F5F8"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imgbg1"
        android:layout_width="3000dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-48dp"
        android:background="@drawable/bg1"
        android:src="@drawable/bg1" />

    <ImageView
        android:id="@+id/img_logo1"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo1" />

    <ImageView
        android:id="@+id/logout"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/logout" />


    <ImageView
        android:id="@+id/imgbg2"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_below="@id/imgbg1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/bg2" />

    <TextView
        android:id="@+id/TVHalo"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="Halo,"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/profil"
        android:layout_width="81dp"
        android:layout_height="80dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/hansel" />

    <TextView
        android:id="@+id/TvKata"
        android:layout_width="217dp"
        android:layout_height="59dp"
        android:layout_below="@+id/TVHalo"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:text="Cek kondisi kualitas air hari ini, dan pastikan ikan tidak kelaparan"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        tools:ignore="TextSizeCheck,TextSizeCheck" />

    <LinearLayout
        android:id="@+id/layer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imgbg2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/monitoring"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@+id/imgbg1"
            android:src="@drawable/menu_monitoring" />

        <ImageView
            android:id="@+id/controling"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@+id/imgbg1"
            android:src="@drawable/menu_controlling" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layer1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/History"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@+id/imgbg1"
            android:src="@drawable/history" />

        <ImageView
            android:id="@+id/Guide"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@+id/imgbg1"
            android:src="@drawable/faq" />
    </LinearLayout>

    <ImageView
        android:id="@+id/Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/about"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="290dp"
        android:layout_marginBottom="50dp"
        />



</RelativeLayout>