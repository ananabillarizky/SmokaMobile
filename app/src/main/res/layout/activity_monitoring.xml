<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050A30"
    tools:context=".MonitoringActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="45dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/katamonitoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppinsextra"
        android:text="Monitoring"
        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <ImageView
        android:id="@+id/suhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/suhul"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/katamonitoring"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txtC"
        android:fontFamily="@font/poppinsextra"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/katamonitoring"
        android:layout_marginTop="50dp"
        android:text="28Â°C"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtsuhuket"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="180dp"
        android:text="Air Dingin"
        android:textColor="@color/black"
        android:textSize="16dp"
        />

    <ImageView
        android:id="@+id/ph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phair"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/suhu"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txtPH"
        android:fontFamily="@font/poppinsextra"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@id/suhu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="6,5"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtphket"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/txtsuhuket"
        android:text="pH Normal"
        android:textColor="@color/black"
        android:textSize="16dp"
        />
    <ImageView
        android:id="@+id/tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tbd"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ph"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txttds"
        android:fontFamily="@font/poppinsextra"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_below="@id/ph"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="400"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tdsket"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/txtphket"
        android:text="Air Jernih"
        android:textColor="@color/black"
        android:textSize="16dp"
        />
    <ImageView
        android:id="@+id/pakanl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pakanl"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tb"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txtingkamakan"
        android:fontFamily="@font/poppinsextra"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/tb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="15 Cm"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtmakanket"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/tdsket"
        android:text="Pakan Mau Habis"
        android:textColor="@color/black"
        android:textSize="16dp"
        />









</RelativeLayout>